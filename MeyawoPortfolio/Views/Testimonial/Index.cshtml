@model List<MeyawoPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Referanslarım</h2>

<table class="table table-bordered ">
    <tr>
        <th>Referans ID</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Resim   </th>
        <th>Statü</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.NameSurname   </td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td>@item.Status  </td>
            <td><a href="#" class=" btn btn-danger ">Sil</a></td>
            <td><a href="#" class="btn btn-success ">Güncelle</a></td>


        </tr>
    }
</table>
<td><a href="#" class=" btn btn-primary  ">Ekle</a></td>